{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "Compiled |Failed to compile."
                    }
                }
            }
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "e2e",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build:ci",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "lint:ci",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "test:ci",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "e2e:ci",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build:content",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "start:prod",
            "problemMatcher": []
        }
    ]
}
